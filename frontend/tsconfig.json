{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "experimentalDecorators": true,
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "outDir": "dist",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ]
}
